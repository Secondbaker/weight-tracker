<div class="block bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mx-auto>
<p class="text-primary">Forgot your password?</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "important-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
