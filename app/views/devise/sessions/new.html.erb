<div class="block p3 w-full max-w-xs">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 mx-auto" }) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field mb-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.label :remember_me , class: "md:w-2/3 block main-text text-sm font-bold" do %>
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          Remember me
        <% end %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "important-button" %>
    <div class="actions flex items-center justify-between">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>