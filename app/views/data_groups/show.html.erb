<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @data_group.name %>
</p>

<p>
  <strong>Unit:</strong>
  <%= @data_group.unit %>
</p>

<h1>Measurement Data</h1>
<%= line_chart @measurement_data.pluck(:graph_time, :value) %>
<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Graph time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurement_data.each do |measurement_datum| %>
      <tr>
        <td><%= measurement_datum.value %></td>
        <td><%= measurement_datum.graph_time %></td>
        <td><%= link_to 'Show', measurement_datum %></td>
        <td><%= link_to 'Edit', edit_measurement_datum_path(measurement_datum) %></td>
        <td><%= link_to 'Destroy', measurement_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_data_group_path(@data_group) %> |
<%= link_to 'Back', data_groups_path %>
