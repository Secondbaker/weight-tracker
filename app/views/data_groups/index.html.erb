<p id="notice"><%= notice %></p>

<h1>Data Groups</h1>
<%= link_to "Sign Out", destroy_user_session_path(), method: :delete   %> 

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @data_groups %>
      <% @data_groups.each do |data_group| %>
        <tr>
          <td><%= data_group.name %></td>
          <td><%= data_group.unit %></td>
          <td><%= link_to 'Show', data_group %></td>
          <td><%= link_to 'Edit', edit_data_group_path(data_group) %></td>
          <td><%= link_to 'Destroy', data_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Data Group', new_data_group_path %>
