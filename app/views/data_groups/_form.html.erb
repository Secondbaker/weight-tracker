<%= form_with(model: data_group, local: true, class: "bg-white shadow-md px-8 pt-6 pb-8 mb-4 mx-auto space-y-2") do |form| %>
  <% if data_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(data_group.errors.count, "error") %> prohibited this data_group from being saved:</h2>

      <ul>
        <% data_group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "form-label"%>
    <%= form.text_field :name, class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="field">
    <%= form.label :unit, class: "form-label" %>
    <%= form.select :unit, options_for_select(Measurement::Unit.names), {}, { class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
  </div>

  <% if params[:action] == :create %>
    <% create_or_update = "Create" %>
  <% else %>
    <% create_or_update = "Update" %>
  <% end %>
  <div class="actions">
    <%= form.submit create_or_update, class: "important-button" %>
  </div>
<% end %>
